{
  "manifest_version": 3,
  "name": "Web Shortcuts",
  "version": "1.0",
  "description": "Saytlar uchun shortcutlar yaratish imkoniyatini beruvchi extension",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}